			scanf("%f", &x);
 		if(x<0) break;
		else if(x>=0 && x<33)               
		{
		sum+=0;
		printf("\t\t\t\tGPA-0\n");
		} 
		
				if(x>=33 && x<=39)   
				{
				sum+=1;
				printf("\t\t\t\tGPA-1\n");
				}
 					
					else if(x>=40 && x<=49)
					{
					sum+=2;
					printf("\t\t\t\tGPA-2\n");
					}
						
						else if(x>=50 && x<=59)
