		for(j=0 ; j< (n-i-1);j++)
		{
			if(num[j]<num[j+1]){     //for decreasing . but for increasing j>j+1 and substitute j with j+1;
					swap=num[j+1];
					num[j+1]=num[j];
					num[j]=swap;	
			}
		}
	}
